<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href={{ asset('images/icon.svg') }}>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@900&family=Poppins:wght@200;500&display=swap" rel="stylesheet">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link rel="stylesheet" href={{ asset('css/custom.css') }}>
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header class="d-flex flex-wrap justify-content-center p-2 align-items-center bg-dark">
			<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
				<img src={{ asset('images/icon.svg') }} alt="logo bnb" width="60">
			</a>

			<ul class="nav nav-pills">
				<li class="nav-item">
					<a href={{ path('app_register') }} class="nav-link text-bnb">Inscription</a>
				</li>
				<li class="nav-item">
					<a href={{ path('app_login') }} class="btn btn-light rounded-pill">Connexion</a>
				</li>
			</ul>
		</header>
        <main>
		    {% block body %}{% endblock %}
        </main>
		<nav class="fixed-bottom py-4 footer-nav d-none d-sm-block">
			<div class="d-flex justify-content-center nav-bottom">
				<div class="bg-white py-1 px-3 rounded-pill shadow ">
					<a class="text-dark" href={{ path('paris') }}>
						<span class="">Paris </span>•
					</a>
					<a class="text-dark" href={{ path('lasvegas') }}>
						<span class="">Las Vegas </span>•
					</a>
					<a class="text-dark" href={{ path('kyoto') }}>
						<span class="">Kyoto </span>•
					</a>
					<a class="text-dark" href={{ path('sydney') }}>
						<span class="">Sydney </span>•
					</a>
					<a class="text-dark" href={{ path('hongkong') }}>
						<span class="">Hong Kong</span>
					</a>
				</div>
			</div>
		</nav>
	</body>
</html>
